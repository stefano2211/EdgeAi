# Dockerfile.mcp
FROM python:3.11-slim

WORKDIR /app

# Instala dependencias básicas
RUN pip install --upgrade pip

# Copia el código de tu proyecto
COPY . /app

# Instala las dependencias de MCP (ajusta según tu requirements.txt si lo tienes)
RUN pip install "mcp[cli]"
RUN pip install httpx torch==2.0.1 transformers==4.41.2 sentence-transformers==2.7.0

# Expone el puerto (opcional, solo para documentación)
EXPOSE 8000

# El comando se define en docker-compose.yml, así que no es necesario aquí